// program to enter number of n digits and show in the some order
/*        5
		5 6
	  5 6 7
	  */

#include <iostream>
#include <cmath>
using namespace std;

int main()
{
	int a;
	int b;
	int x = 0;
	int i = 1;
	int c = 0;
	int p = 10;
	cout << "Enter a number upto 6 digits" << endl;
	cin >> a;
	if (a <= 999999)
	{
		b = a;
		while (b > 0)
		{
			b = b / 10;
			c++;
		}
		
		p = pow(p, (c - 1));
		for (int i = 1; i <= c; i++)
		{
			x=(c)-i;
			for (int k = 1; k <= x; k++)
				cout << " ";
			for (int j = 1; j < 2; j++)
				cout << a / p;
			p = p / 10;
			cout << endl;
		}
	}
}
